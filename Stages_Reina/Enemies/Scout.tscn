	$VisibilityNotifier2D.connect(\"viewport_entered\",self,\"enable\")
	set_physics_process(true)
	
func enable(_discard):
	set_physics_process(true)
	$AnimatedSprite.playing = true


func _physics_process(delta):
	#movX = get_node(\"/root/Node2D/Player\").global_position.x > global_position.x ? 100 : -100
	var movX = 0
	if get_node(\"/root/Node2D/Player\").global_position.x > global_position.x+10:
		movX=100
		sprite.flip_h = true
	elif get_node(\"/root/Node2D/Player\").global_position.x < global_position.x-10:
		sprite.flip_h = false
		movX=-100
	
	
	var movY = 0
	if get_node(\"/root/Node2D/Player\").global_position.y > global_position.y+10:
		movY = 100
	elif get_node(\"/root/Node2D/Player\").global_position.y < global_position.y-10:
		movY = -100
	#if movX > 0:
	#facing = DIRECTION.RIGHT if movX > 0 else DIRECTION.LEFT
	move_and_slide(Vector2(movX,movY))
	
